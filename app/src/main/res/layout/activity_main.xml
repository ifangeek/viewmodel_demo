<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

   <Button
       android:id="@+id/btnViewModelSumar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="View Model Sumar Activity"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

   <Button
    android:id="@+id/btnViewModelUser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Model User Activity"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@+id/btnViewModelSumar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

   <Button
       android:id="@+id/btnLiveDataUser"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Live Data User Activity"
       android:layout_marginTop="16dp"
       app:layout_constraintTop_toBottomOf="@+id/btnViewModelUser"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>